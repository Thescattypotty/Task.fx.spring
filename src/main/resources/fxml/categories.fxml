<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="360.0" prefWidth="350.0" stylesheets="@../css/main.css"
    xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="org.javaFxApp.taskManagement.Controller.CategoryController">
    <children>
        <TableView fx:id="categoriesList" prefHeight="340.0" prefWidth="200.0" 
                   AnchorPane.bottomAnchor="0.0" 
                   AnchorPane.leftAnchor="0.0" 
                   AnchorPane.rightAnchor="0.0" 
                   AnchorPane.topAnchor="0.0">
            <columns>
                <TableColumn fx:id="name" prefWidth="200.0" text="Name" />
                <TableColumn fx:id="edit" prefWidth="150.0" text="Actions" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</AnchorPane>
